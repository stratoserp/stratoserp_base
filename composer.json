{
    "name": "stratoserp/stratoserp_base",
    "description": "StratosERP installation profile",
    "type": "drupal-profile",
    "homepage": "https://github.com/stratoserp/stratoserp_base",
    "license": "GPL-2.0-or-later",
    "authors": [
        { "name": "Simon Lindsay", "role": "Developer" }
    ],
    "repositories": [
        { "type": "composer", "url": "https://packages.drupal.org/8" },
        { "type": "composer", "url": "https://asset-packagist.org" }
    ],
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "ext-mbstring": "*",
        "composer/installers": "^1.9",
        "cweagans/composer-patches": "^1.7",
        "drupal/admin_toolbar": "^3.1",
        "drupal/bootstrap4": "^2.1",
        "drupal/chartjs_api": "^1.1",
        "drupal/core": "^9.4",
        "drupal/core-composer-scaffold": "^9.4",
        "drupal/duration_field": "^2.0",
        "drupal/dynamic_entity_reference": "^3.0",
        "drupal/eva": "^3.0",
        "drupal/extra_field": "^2.3",
        "drupal/field_group": "^3.4",
        "drupal/fullcalendar_view": "^5.1",
        "drupal/geolocation": "^3.7",
        "drupal/hook_event_dispatcher": "^3.1",
        "drupal/linkit": "^6.0",
        "drupal/token": "^1.9",
        "drupal/toolbar_menu": "^2.2",
        "drupal/tvi": "^1.0",
        "drupal/twig_tweak": "^3.1",
        "drupal/username_enumeration_prevention": "^1.2",
        "drupal/views_bulk_operations": "^4.0",
        "drupal/webform": "^6.1",
        "drush/drush": "^11",
        "singularo/shepherd-drupal-scaffold": "dev-develop"
    },
    "suggest": {
        "drupal/drush": "Required for some of the utlity commands.",
        "drupal/multiple_fields_remove_button": "Add remove button against each field in a list.",
        "drupal/replicate": "Useful for making duplicates of quotes or similar.",
        "drupal/replicate_ui": "Useful for making duplicates of quotes or similar.",
        "drupal/webform_views": "Provide views for webform integration.",
        "drupal/xero": "Xero integration requires the xero module."
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "discard-changes": true,
        "sort-packages": true,
        "allow-plugins": {
            "cweagans/composer-patches": true,
            "composer/installers": true,
            "drupal/core-composer-scaffold": true,
            "singularo/shepherd-drupal-scaffold": true
        }
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "drupal-scaffold": {
            "allowed-packages": [
                "singularo/shepherd-drupal-scaffold"
            ],
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"]
        },
        "preserve-paths": [
            "web/sites"
        ],
        "patches-file": "composer.patches.json",
        "patchLevel": {
            "drupal/core": "-p2"
        }
    }
}
